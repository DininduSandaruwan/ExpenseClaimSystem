@page "/dashboard"
@layout MainLayout
@using Microsoft.FluentUI.AspNetCore.Components

<FluentText Typo="Typography.H3">
    Dashboard
</FluentText>

<FluentStack Orientation="Orientation.Horizontal"
             HorizontalGap="20"
             Style="margin-top:25px;">

    <FluentCard Style="width:250px; padding:20px;">
        <FluentText Typo="Typography.H5">
            Total Claims
        </FluentText>
        <FluentText Typo="Typography.H2">
            25
        </FluentText>
    </FluentCard>

    <FluentCard Style="width:250px; padding:20px;">
        <FluentText Typo="Typography.H5">
            Pending Approvals
        </FluentText>
        <FluentText Typo="Typography.H2">
            5
        </FluentText>
    </FluentCard>

    <FluentCard Style="width:250px; padding:20px;">
        <FluentText Typo="Typography.H5">
            Approved This Month
        </FluentText>
        <FluentText Typo="Typography.H2">
            12
        </FluentText>
    </FluentCard>

</FluentStack>