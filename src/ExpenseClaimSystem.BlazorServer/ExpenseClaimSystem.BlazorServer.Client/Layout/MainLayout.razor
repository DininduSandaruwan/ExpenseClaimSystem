	<!-- Body Layout -->
	<FluentStack Orientation="Orientation.Horizontal"
				 Style="margin-top:60px; height:100%;">

		<!-- Sidebar -->
		<FluentNavMenu Style="@SidebarStyle">

			<FluentNavLink Href="/dashboard">
				@if (!isCollapsed)
				{
					<span>Dashboard</span>
				}
			</FluentNavLink>

			<FluentNavLink Href="/claims/create">
				@if (!isCollapsed)
				{
					<span>Create Claim</span>
				}
			</FluentNavLink>

			<FluentNavLink Href="/claims/list">
				@if (!isCollapsed)
				{
					<span>Claim List</span>
				}
			</FluentNavLink>

		</FluentNavMenu>

		<!-- Main Content -->
		<FluentStack Style="flex:1; padding:30px;">
			@Body
		</FluentStack>

	</FluentStack>

</FluentLayout>

@code {
	private bool isCollapsed = false;

	private string SidebarStyle =>
	$"width:{(isCollapsed ? "70px" : "240px")};" +
	"transition: width 0.2s ease;" +
	"border-right:1px solid #ddd;";
}